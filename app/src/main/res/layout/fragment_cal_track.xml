<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="date"
        android:id="@+id/date_cal_track"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Setting Goal of Calories"
        android:layout_gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/setgoal_cal_track"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tatal Consumed Calories"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/consume_cal_track"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tatal Burned Calories"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/burned_cal_track"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_margin="10dp" />


</LinearLayout>